InteractionsWithOnlyInactiveEmployees :=
COUNTROWS (
    FILTER (
        ADDCOLUMNS (
            VALUES ( comm_emp[comm_id] ),
            "ActiveCount", CALCULATE (
                COUNTROWS ( comm_emp ),
                FILTER (
                    comm_emp,
                    LOWER(RELATED(Contact[x_status])) = "active"
                )
            ),
            "InactiveCount", CALCULATE (
                COUNTROWS ( comm_emp ),
                FILTER (
                    comm_emp,
                    LOWER(RELATED(Contact[x_status])) = "inactive"
                )
            ),
            "TotalCount", CALCULATE (
                COUNTROWS ( comm_emp )
            )
        ),
        [ActiveCount] = 0 &&
        [InactiveCount] > 0 &&
        [ActiveCount] + [InactiveCount] > 0  -- exclude blanks only
    )
)
