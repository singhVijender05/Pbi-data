InteractionsWithOnlyLeftEmployees :=
COUNTROWS (
    FILTER (
        VALUES ( comm_emp[comm_id] ),
        -- Count employees with non-blank status that are active
        CALCULATE (
            COUNTROWS ( comm_emp ),
            FILTER (
                comm_emp,
                NOT ISBLANK(RELATED(Contact[x_status]))
                    && LOWER(RELATED(Contact[x_status])) = "active"
            )
        ) = 0
        &&
        -- Count employees with non-blank status (active or inactive)
        CALCULATE (
            COUNTROWS ( comm_emp ),
            FILTER (
                comm_emp,
                NOT ISBLANK(RELATED(Contact[x_status]))
            )
        ) > 0
    )
)
