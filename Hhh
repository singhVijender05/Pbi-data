package tests;

import config.ConfigReader;
import utils.SeleniumUtils;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.*;
import java.time.Duration;
import static org.testng.Assert.*;

public class SeleniumScenariosTest {
    WebDriver driver;
    SeleniumUtils utils;

    @BeforeClass
    public void setup() {
        System.setProperty("webdriver.chrome.driver", ConfigReader.get("chromeDriverPath"));
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(
                Integer.parseInt(ConfigReader.get("implicitWait"))));
        driver.manage().window().maximize();
        driver.get(ConfigReader.get("baseUrl"));
        utils = new SeleniumUtils(driver);
    }

    @Test
    public void testScenario1() {
        try {
            // Implement test step 1
            assertTrue(true); // dummy assertion
        } catch (Exception e) {
            fail("Scenario 1 failed: " + e.getMessage());
        }
    }

    @AfterClass
    public void cleanup() {
        if (driver != null) {
            driver.quit();
        }
    }
}



package utils;

import org.openqa.selenium.*;

public class SeleniumUtils {
    WebDriver driver;

    public SeleniumUtils(WebDriver driver) {
        this.driver = driver;
    }

    public WebElement byId(String id) {
        return driver.findElement(By.id(id));
    }

    public WebElement byXpath(String xpath) {
        return driver.findElement(By.xpath(xpath));
    }

    public void click(WebElement element) {
        element.click();
    }

    public void sendKeys(WebElement element, String value) {
        element.clear();
        element.sendKeys(value);
    }
}
